@using MyApp.WebApp.Pages.Shared.DisplayTemplates
@model MyApp.AppServices.EntryActions.Dto.EntryActionViewDto

<div class="container small">
    <p>
        <em>For Work Entry ID @Model.WorkEntryId.ToString()</em>
    </p>
    <dl class="row">
        <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(dto => dto.ActionDate)</dt>
        <dd class="col-md-8 col-lg-9">@Html.DisplayFor(dto => dto.ActionDate, DisplayTemplate.DateOnly)</dd>
        <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(dto => dto.Comments)</dt>
        <dd class="col-md-8 col-lg-9">@Html.DisplayFor(dto => dto.Comments, DisplayTemplate.TruncateText)</dd>
    </dl>
</div>
