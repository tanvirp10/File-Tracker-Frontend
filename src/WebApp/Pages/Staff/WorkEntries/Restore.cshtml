@page "{id:Guid?}"
@using MyApp.WebApp.Pages.Shared.EditorTemplates
@model RestoreModel

@{
    ViewData["Title"] = $"Restore Entry ID {Model.EntryDto.WorkEntryId}";
    ViewData["NoAnchors"] = "True";
}

<h1>
    <em>Confirm</em> @ViewData["Title"]
</h1>

<div class="p-3 border rounded-3 bg-dark-subtle text-dark-emphasis">
    <p class="lead text-warning-emphasis font-weight-medium">
        Are you sure you want to restore this deleted WorkEntry?
    </p>

    <partial name="Shared/_WorkEntrySummaryPartial" model="Model.ItemView" />

    <form method="post">
        <div class="mb-3">
            @Html.EditorFor(model => model.EntryDto.Comments, EditorTemplate.Textarea, new { Rows = 3 })
        </div>
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-warning col-5 col-sm-3 col-lg-2 me-2">Restore</button>
            <a asp-page="Details" asp-route-id="@Model.EntryDto.WorkEntryId.ToString()" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <input asp-for="EntryDto.WorkEntryId" type="hidden" />
    </form>
</div>
