@page "{actionId:Guid?}"
@model RestoreActionModel

@{
    ViewData["Title"] = "Restore Action";
    ViewData["NoAnchors"] = "True";
}

<h1>
    <em>Confirm</em> @ViewData["Title"]
</h1>

<div class="p-3 border rounded-3 bg-dark-subtle text-dark-emphasis">
    <p class="lead text-danger-emphasis font-weight-medium">
        Are you sure you want to restore this deleted Action?
    </p>

    <partial name="Shared/_ActionSummaryPartial" model="Model.EntryActionViewDto" />

    <form method="post">
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-danger col-5 col-sm-3 col-lg-2 me-2">Restore</button>
            <a asp-page="../WorkEntries/Details" asp-route-id="@Model.EntryActionViewDto.WorkEntryId.ToString()" asp-fragment="@Model.EntryActionItemId.ToString()" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <input asp-for="EntryActionItemId" type="hidden" />
    </form>
</div>
